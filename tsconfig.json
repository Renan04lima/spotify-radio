{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2022",
    "sourceMap": true,
    "rootDirs": ["server", "tests"],
    "baseUrl": "server",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitOverride": true
  },
  "include": ["server", "tests"]
}
